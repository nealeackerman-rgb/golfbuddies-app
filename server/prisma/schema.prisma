// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  Int      @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String   @unique
  password            String
  phone               String
  profilePictureUrl   String
  friendIds           Int[]
  handicap            Float
  courseId            Int?
}

model Course {
  id              Int      @id @default(autoincrement())
  name            String
  location        String
  pars            Int[]
  handicapIndices Int[]
  rating          Float
  slope           Int
}

model Competition {
  id                String       @id
  name              String
  creatorId         Int
  courses           Json
  participantIds    Int[]
  gameFormat        GameFormat
  status            String
  teams             Json?
  teamSize          Int?
  feed              Json?
  skinValue         Int?
  skinsScoringType  String?
}

model Round {
  id               String       @id
  courseName       String
  courseId         Int
  date             String
  players          Json
  scores           Json
  aiSummary        String?
  likes            Int
  comments         Json
  gameFormat       GameFormat
  teams            Json?
  matchResult      Json?
  competitionId    String?
  skinValue        Int?
  skinsResult      Json?
  skinsScoringType String?
}

enum GameFormat {
  STROKE_PLAY
  MATCH_PLAY
  SCRAMBLE
  BEST_BALL
  SHAMBLE
}